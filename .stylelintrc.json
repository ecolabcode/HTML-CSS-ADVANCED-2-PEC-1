{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-scss",
    "stylelint-config-sass-guidelines"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "max-nesting-depth": 3,
    "block-no-empty": true,
    "color-no-invalid-hex": true,
    "comment-no-empty": true
  }
}
